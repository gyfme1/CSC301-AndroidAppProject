<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinancialHub.FinancialHubActivity"
    >

    <!--   Graph API-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="102dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="#DDDDDD"
            android:gravity="center_vertical"

            app:srcCompat="@drawable/chart_icon_foreground"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="292dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="#DDDDDD"
            android:gravity="center_vertical"
            android:text="@string/expenditure_preview_title"

            android:textColor="#2196F3"
            android:textSize="35sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="sans-serif-condensed-medium" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="#DDDDDD"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <Button
        android:id="@+id/manage_finances"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="48dp"
        android:background="@color/babyBlue"
        android:clickable="true"
        android:enabled="true"
        android:onClick="switchToManageFinancesScreen"
        android:text="@string/manage_finances"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/import_transactions"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="48dp"
        android:background="@color/babyBlue"
        android:clickable="true"
        android:enabled="true"
        android:onClick="switchToImportScreen"
        android:text="@string/import_transactions"
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set_goals"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="48dp"
        android:background="@color/babyBlue"
        android:clickable="true"
        android:enabled="true"

        android:onClick="switchToGoalsScreen"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/set_goals"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="65dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="324dp"
        android:layout_marginRight="324dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goals_icon" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="65dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="324dp"
        android:layout_marginRight="324dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pie_chart_icon" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="65dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="324dp"
        android:layout_marginRight="324dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/load_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
